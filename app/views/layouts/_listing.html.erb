<%= render 'layouts/listing_filter_form' %>

<br />
<br />

<%= button_tag 'New Entry', class: 'btn btn-success btn-vertically-slim' %>
<br />
<br />

<table id="listing" border="1px solid #000">
  <thead>
  <tr>
    <th>Date</th>
    <th>ID</th>
    <th>Customer</th>
    <th>Total</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% items.each do |item| %>
      <tr>
        <td><%= item.created_at %></td>
        <td><%= item.id %></td>
        <td><%= item.customer %></td>
        <td><%= item.paid_total %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', "/#{link_name}/#{item.id}/edit", method: :get %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Entry', "/#{link_name}/new", method: :get %>
