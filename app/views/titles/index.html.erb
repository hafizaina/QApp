<p id="notice"><%= notice %></p>

<h1>Titles</h1>

<table border="1px solid #000">
  <thead>
    <tr>
      <th>Date</th>
      <th>Transaction ID</th>
      <th>Customer</th>
      <th>Title number</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><%= title.created_at %></td>
        <td><%= title.id %></td>
        <td><%= title.customer %></td>
        <td><%= title.title_number %></td>
        <td><%= title.total_paid %></td>
        <td><%= link_to 'Show', title %></td>
        <td><%= link_to 'Edit', edit_title_path(title) %></td>
        <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

